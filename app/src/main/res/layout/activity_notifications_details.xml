<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Activity.NotificationsDetailsActivity">

    <ImageView
        android:id="@+id/img_background_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_3" />

    <TextView
        android:id="@+id/txt_notification_details_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43.53dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/avant_garde_book"
        android:onClick="onclick"
        android:text="Notifications Details"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_notification_details_back"
        android:layout_width="7.53dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="59.5dp"
        android:onClick="onclick"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:background="#F3F3F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_background_3">

        <ImageView
            android:id="@+id/img_notification_d_type"
            android:layout_width="30.01dp"
            android:layout_height="30.01dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3.09dp"
            android:scaleType="center"
            android:paddingTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notifcaition_system" />

        <TextView
            android:id="@+id/txt_notification_d_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47.1dp"
            android:layout_marginTop="12.49dp"

            android:fontFamily="@font/avant_garde_demi"
            android:gravity="start"
            android:text="Notification Titel"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_notification_d_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="6.49dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/avant_garde_book"
            android:gravity="start"
            android:text="Notification Text"
            android:textColor="#9A9A9A"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_notification_d_titel"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/txt_notification_d_v_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/avant_garde_book"
            android:gravity="start"
            android:onClick="onclick"
            android:text="View Visit List"
            android:textColor="@color/secondary_color"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_notification_d_body"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="65dp"
            android:layout_height="0.9dp"
            android:background="@color/secondary_color"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_notification_d_v_list"
            app:layout_constraintStart_toStartOf="@+id/txt_notification_d_v_list"
            app:layout_constraintTop_toTopOf="@+id/txt_notification_d_v_list" />
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>