<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.QuestionsFragment2">


    <TextView
        android:id="@+id/txt_check_q2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/txt_check"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center_vertical|start"
        android:paddingStart="38dp"
        android:visibility="gone"
        android:text="Check question 1 clear your answer and attachment"
        android:textColor="#13B4CD"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_check_q2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/check"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/txt_check_q2"
        app:layout_constraintStart_toStartOf="@+id/txt_check_q2"
        app:layout_constraintTop_toTopOf="@+id/txt_check_q2" />

    <TextView
        android:id="@+id/txt_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/avant_garde_demi"
        android:gravity="start"
        android:text="Q2"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_check_q2" />

    <Spinner
        android:id="@+id/spinner_q2"
        android:layout_width="match_parent"
        android:layout_height="44.8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/avant_garde_book"
        android:paddingStart="15dp"
        android:textColor="#B4B4B4"
        android:textSize="12dp"
        android:background="@drawable/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_q2" />

    <ImageView
        android:layout_width="20.08dp"
        android:layout_height="20.08dp"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/arrow_down_2"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_q2"
        app:layout_constraintEnd_toEndOf="@+id/spinner_q2"
        app:layout_constraintTop_toTopOf="@+id/spinner_q2" />


    <TextView
        android:id="@+id/txt_upload_file_q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/avant_garde_demi"
        android:gravity="start"
        android:text="Upload File"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_q2" />

    <TextView
        android:id="@+id/txt_select_attachment_q2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/login_edit_text"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center_vertical|start"
        android:padding="12dp"
        android:text="Select Attachment"
        android:textColor="#B4B4B4"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_upload_file_q2" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="13dp"
        android:src="@drawable/upload"
        app:layout_constraintBottom_toBottomOf="@+id/txt_select_attachment_q2"
        app:layout_constraintEnd_toEndOf="@+id/txt_select_attachment_q2"
        app:layout_constraintTop_toTopOf="@+id/txt_select_attachment_q2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_q2_upload"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_select_attachment_q2"
        tools:listitem="@layout/item_upload" />


</androidx.constraintlayout.widget.ConstraintLayout>