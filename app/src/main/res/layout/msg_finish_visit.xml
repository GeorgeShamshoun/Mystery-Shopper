<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325.3dp"
    android:layout_height="190.74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/b_g_white_card"
    android:layout_gravity="center"
    android:layout_marginStart="16.5dp"
    android:layout_marginEnd="16.5dp"
    app:layout_constraintCircleRadius="12dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="38.45dp"
        android:layout_height="38.45dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/finish_visit"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avant_garde_demi"
        android:gravity="center_horizontal"
        android:text="Finish and save visit"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.81dp"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center_horizontal"
        android:text="Are you sure to finish and send this visit ?"
        android:textColor="#475467"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.36dp"
        android:layout_marginBottom="21.73dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <Button
            android:id="@+id/btn_cancel_visit"
            android:layout_width="135.14dp"
            android:layout_height="34.38dp"
            android:layout_marginStart="20.09dp"
            android:layout_marginEnd="6.4dp"
            android:background="@drawable/item_btn_background_2"
            android:fontFamily="@font/avant_garde_book"
            android:gravity="center"
            android:inputType="text"
            android:text="Cancel"
            android:textColor="@color/secondary_color"
            android:textSize="11dp" />

        <Button
            android:id="@+id/btn_send_visit"
            android:layout_width="135.14dp"
            android:layout_height="34.38dp"
            android:layout_marginEnd="20.09dp"
            android:layout_marginStart="6.4dp"
            android:background="@drawable/item_btn_background_1"
            android:fontFamily="@font/avant_garde_book"
            android:gravity="center"
            android:inputType="text"
            android:text="Yes, Send Visit"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>