<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/txt_item_upload"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/b_g_upload"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center_vertical|start"
        android:paddingStart="30dp"
        android:text="File Name"
        android:textColor="#919191"
        android:textSize="14dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/img_item_upload"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_upload"
        app:layout_constraintStart_toStartOf="@+id/txt_item_upload"
        app:layout_constraintTop_toTopOf="@+id/txt_item_upload"
        app:srcCompat="@drawable/img"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btn_preview_upload"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/preview"
        android:layout_marginEnd="34.17dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_upload"
        app:layout_constraintEnd_toEndOf="@+id/txt_item_upload"
        app:layout_constraintTop_toTopOf="@+id/txt_item_upload" />

    <Button
        android:id="@+id/btn_delete_upload"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/delete"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_upload"
        app:layout_constraintEnd_toEndOf="@+id/txt_item_upload"
        app:layout_constraintTop_toTopOf="@+id/txt_item_upload" />
</androidx.constraintlayout.widget.ConstraintLayout>