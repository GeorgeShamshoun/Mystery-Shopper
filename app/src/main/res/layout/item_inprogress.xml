<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="17dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="17dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/item_inporgress_background">

    <TextView
        android:id="@+id/txt_branch_i_name"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avant_garde_demi"
        android:gravity="start"
        android:text="Branch Name"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_branch_i_address"
        style="AvantGarde Bk BT"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:text="Branch Address"
        android:textColor="#595959"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_branch_i_name" />

    <TextView
        android:id="@+id/txt_visit_i_date"
        android:fontFamily="@font/avant_garde_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="00/00/0000"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/img_calender_i"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_visit_i_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center"
        android:text="00%"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar_i"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar_i" />

    <Button
        android:id="@+id/btn_i_item"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_btn_background_2"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center"
        android:inputType="text"
        android:text="Resume Visit"
        android:textColor="@color/primary_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_i" />

    <ImageView
        android:id="@+id/img_calender_i"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calendar_2" />

    <ProgressBar
        android:id="@+id/progressBar_i"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#ECECEC"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/curved_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/txt_visit_i_per"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_branch_i_address" />


</androidx.constraintlayout.widget.ConstraintLayout>