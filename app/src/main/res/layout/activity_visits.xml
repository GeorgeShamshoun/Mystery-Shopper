<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Activity.VisitsActivity">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_2" />

    <TextView
        android:id="@+id/txt_visit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43.53dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/avant_garde_book"
        android:onClick="onclick"
        android:text="My Visits"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_visit_back"
        android:layout_width="7.53dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="59.5dp"
        android:onClick="onclick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow_1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img_scheduled_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="7dp"
                android:onClick="onclick"
                app:srcCompat="@drawable/scheduled_0" />
            <TextView
                android:id="@+id/txt_scheduled"
                android:text="Scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/avant_garde_book"
                android:textColor="#C7BBDC"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_s_notivication"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="end"
                android:background="@drawable/notification_point"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_accepted_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="7dp"
                android:onClick="onclick"
                app:srcCompat="@drawable/accepted_0"  />

            <TextView
                android:id="@+id/txt_accepted"
                android:text="Accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/avant_garde_book"
                android:textColor="#C7BBDC"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_a_notivication"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="end"
                android:background="@drawable/notification_point"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img_inprogress_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="7dp"
                android:onClick="onclick"
                app:srcCompat="@drawable/inprogess_0"  />
            <TextView
                android:id="@+id/txt_inprogress"
                android:text="In Progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/avant_garde_book"
                android:textColor="#C7BBDC"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_i_notivication"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="end"
                android:background="@drawable/notification_point"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img_returned_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="7dp"
                android:onClick="onclick"
                app:srcCompat="@drawable/returned_0"  />

            <TextView
                android:id="@+id/txt_returned"
                android:text="Returned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/avant_garde_book"
                android:textColor="#C7BBDC"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txt_r_notivication"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="end"
                android:background="@drawable/notification_point"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_scheduled_date"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:onClick="onclick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_background">

        <TextView
            android:id="@+id/txt_date_range"
            android:layout_width="153dp"
            android:layout_height="29dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/b_g_data_range"
            android:fontFamily="@font/avant_garde_book"
            android:gravity="center"
            android:onClick="onclick"
            android:text="Date Range"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/calander_1"
            app:layout_constraintBottom_toBottomOf="@+id/txt_date_range"
            app:layout_constraintStart_toStartOf="@+id/txt_date_range"
            app:layout_constraintTop_toTopOf="@+id/txt_date_range" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@drawable/arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/txt_date_range"
            app:layout_constraintEnd_toEndOf="@+id/txt_date_range"
            app:layout_constraintTop_toTopOf="@+id/txt_date_range" />

        <TextView
            android:id="@+id/txt_the_date"
            android:layout_width="176.14dp"
            android:layout_height="29dp"
            android:layout_marginStart="1.43dp"
            android:background="@drawable/b_g_the_data"
            android:fontFamily="@font/avant_garde_book"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:text="02/09/2023 - 06/09/2023"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_date_range"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <ImageView
            android:id="@+id/img_the_date"
            android:layout_width="6.14dp"
            android:layout_height="6.11dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close"
            android:onClick="onclick"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/txt_the_date"
            app:layout_constraintEnd_toEndOf="@+id/txt_the_date"
            app:layout_constraintTop_toTopOf="@+id/txt_the_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_visit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:background="#FAFAFA"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lo_scheduled_date"
        tools:listitem="@layout/item_scheduled" />
</androidx.constraintlayout.widget.ConstraintLayout>