<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325.3dp"
    android:layout_height="190.74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/b_g_white_card"
    android:layout_gravity="center"
    android:layout_marginStart="16.5dp"
    android:layout_marginEnd="16.5dp"
    app:layout_constraintCircleRadius="12dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="38.45dp"
        android:layout_height="38.45dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/error_icon"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/avant_garde_demi"
        android:gravity="center_horizontal"
        android:text="Opps, Send Survey is failed!"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.81dp"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center_horizontal"
        android:text="Please try again sending the survey"
        android:textColor="#9A9A9A"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_try_again_visit"
        android:layout_width="281.84dp"
        android:layout_height="34.38dp"
        android:background="@drawable/item_btn_background_1"
        android:fontFamily="@font/avant_garde_book"
        android:gravity="center"
        android:inputType="text"
        android:text="Try Again"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>


</androidx.constraintlayout.widget.ConstraintLayout>