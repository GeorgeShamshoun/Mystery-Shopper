<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Activity.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:fontFamily="@font/itc_avant_garde_gothic_std_demi"
            android:gravity="center"
            android:text="Welcome,"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_login"
            android:layout_width="0dp"
            android:layout_height="288dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="17dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="250dp"
                android:layout_marginBottom="196dp"
                app:srcCompat="@drawable/img_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="106dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="159dp"
                android:layout_marginBottom="227dp"
                android:fontFamily="@font/avant_garde_demi"
                android:gravity="start"
                android:text="LOGIN"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="106dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/avant_garde_book"
                android:gravity="start"
                android:text="Enter email address and password"
                android:textColor="#9A9A9A"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="112dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="221dp"
                android:background="@drawable/login_edit_text"
                android:fontFamily="@font/avant_garde_book"
                android:gravity="start"
                android:inputType="textEmailAddress"
                android:paddingStart="14dp"
                android:paddingTop="28dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                style="AvantGarde Bk BT"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="121dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="252dp"
                android:fontFamily="@font/avant_garde_book"
                android:text="Username"
                android:textColor="#919191"
                android:textSize="12sp" />

            <TextView
                style="AvantGarde Bk BT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="175dp"
                android:fontFamily="@font/avant_garde_book"
                android:text="Ex ( cairo\esraa.noaman )"
                android:textColor="@color/secondary_color"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="207dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/login_edit_text"
                android:fontFamily="@font/avant_garde_book"
                android:gravity="start"
                android:inputType="textPassword"
                android:paddingStart="14dp"
                android:paddingTop="28dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                style="AvantGarde Bk BT"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="216dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="57dp"
                android:fontFamily="@font/avant_garde_book"
                android:text="Password"
                android:textColor="#919191"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_login_error"
                style="AvantGarde Bk BT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="269dp"
                android:fontFamily="@font/avant_garde_book"
                android:text="You have wrong in username or password"
                android:textColor="#E70707"
                android:textSize="10sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_show_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="226dp"
                android:layout_marginEnd="20.75dp"
                android:layout_marginBottom="38dp"
                app:srcCompat="@drawable/visible_password" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="566dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_button"
            android:elevation="10dp"
            android:fontFamily="@font/avant_garde_book"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>